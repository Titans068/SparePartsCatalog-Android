<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="30dp"
        tools:context=".MainActivity">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textSize="24sp"
              android:text="My Parts"
              android:gravity="center_horizontal"
              android:layout_marginBottom="40dp"
    />
    <ImageView
            android:id="@+id/images"
            android:layout_width="102dp"
            android:layout_height="53dp"

            android:layout_marginStart="-150dp"
            android:src="@drawable/images1"/>

    <LinearLayout
            android:layout_width="350dp"
            android:layout_marginTop="-50dp"

            android:layout_height="49dp"
            android:gravity="center">


        <TextView
                android:id="@+id/et_password"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Carburator by You @2500/= in Mombasa"/>
    </LinearLayout>

    <ImageView
            android:id="@+id/exhaust"
            android:layout_width="102dp"
            android:layout_height="53dp"

            android:layout_marginStart="-150dp"
            android:src="@drawable/exhaust"/>

    <LinearLayout
            android:layout_width="350dp"
            android:layout_marginTop="-50dp"

            android:layout_height="49dp"
            android:gravity="center">


        <TextView
                android:id="@+id/exh_text"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Exhaust by You @10000/= in Mombasa"/>
    </LinearLayout>


    <ImageView
            android:id="@+id/gasket"
            android:layout_width="102dp"
            android:layout_height="53dp"

            android:layout_marginStart="-150dp"
            android:src="@drawable/gasket"/>

    <LinearLayout
            android:layout_width="350dp"
            android:layout_marginTop="-50dp"

            android:layout_height="49dp"
            android:gravity="center">


        <TextView
                android:id="@+id/gasket_txt"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Gasket by You @12000/= in Mombasa"/>
    </LinearLayout>
    <ImageView
            android:id="@+id/gearbox"
            android:layout_width="102dp"
            android:layout_height="53dp"

            android:layout_marginStart="-150dp"
            android:src="@drawable/gearbox"/>

    <LinearLayout
            android:layout_width="350dp"
            android:layout_marginTop="-50dp"

            android:layout_height="49dp"
            android:gravity="center">


        <TextView
                android:id="@+id/gearbox_txt"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Gearbox by You @75000/= in Mombasa"/>
    </LinearLayout>

</LinearLayout>